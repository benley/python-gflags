# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --with python2,python3 --buildsystem pybuild

override_dh_auto_install:
	# Generate a man page for gflags2man
	PYTHONPATH=$(CURDIR) python$* gflags2man.py --dest_dir - gflags2man.py > gflags2man.1
	dh_auto_install
